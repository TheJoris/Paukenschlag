set title "{/Symbol D} t = 10^{-5} {/Symbol t}, t_{sim}=10^{1} {/Symbol t}"

plot "./BD1Dirr_rdensana_1a.dat" u (\$1):2 with lines ls 10 title "P_{1D, Rad}",\
"./newBD1Dirr_rdenssim_1.dat" u (\$1-R):2 with lines ls 9 title "newBD",\
"./oldBD1Dirr_rdenssim_1.dat" u (\$1-R):2 with linespoints ls 1 title "oldBD"

EOF

epstopdf BD1Dirr_rdens_compare.eps
fi




