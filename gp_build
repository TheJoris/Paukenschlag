#set ytics 2 format "%g"
#set xtics 2 format "%g"
set xlabel "r/R"
set ylabel "p_{1D, rev}"
#set rmargin 4
#set key bottom middle
set key top right

#set arrow nohead from -6,0 to 0,0 ls 14

R=1

plot "./newBD1Drev_rdenssim_1.dat" u (\$1-R):2 with points pt 1 ps 2 title "t_{sim} = 10^{1} {/Symbol t}",\
"./newBD1Drev_rdenssim_2.dat" u (\$1-R):2 with points pt 4 ps 2 title "t_{sim} = 10^{0} {/Symbol t}",\
"./newBD1Drev_rdenssim_3.dat" u (\$1-R):2 with points pt 6 ps 2 title "t_{sim} = 10^{-1} {/Symbol t}",\
"./newBD1Drev_rdenssim_4.dat" u (\$1-R):2 with points pt 10 ps 2 title "t_{sim} = 10^{-2} {/Symbol t}",\
"./BD1Drev_rdensana_1.dat" with lines ls 1 notitle,\
"./BD1Drev_rdensana_2.dat" with lines ls 2 notitle,\
"./BD1Drev_rdensana_3.dat" with lines ls 3 notitle,\
